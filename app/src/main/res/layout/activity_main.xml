<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_openVideoActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_button_padding"
        android:layout_marginEnd="@dimen/main_button_padding"
        android:text="@string/btn_live_classification"
        app:layout_constraintBottom_toTopOf="@+id/btn_openGalleryActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_openGalleryActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/btn_from_gallery"
        app:layout_constraintTop_toBottomOf="@+id/btn_openVideoActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/main_button_padding"
        android:layout_marginEnd="@dimen/main_button_padding" />

</androidx.constraintlayout.widget.ConstraintLayout>